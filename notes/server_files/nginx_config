root@localhost:~# cat /etc/nginx/sites-enabled/lunarmelee.com 
server {
    server_name lunarmelee.com www.lunarmelee.com;

    # ===== SSL (Certbot) =====
    listen 443 ssl http2;
    ssl_certificate /etc/letsencrypt/live/lunarmelee.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/lunarmelee.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    # ===== OME: app (LL-HLS + WebRTC signalling over HTTPS/WSS) =====
    # Example: https://lunarmelee.com/app/test/llhls.m3u8
    #          wss://lunarmelee.com/app/test
    client_max_body_size 50M;
    proxy_read_timeout 300s;
    proxy_connect_timeout 300s;
    location /app/ {
        proxy_pass http://127.0.0.1:3333;      # keep /app/... path intact
        proxy_http_version 1.1;

        # WebSocket upgrade (for WebRTC signalling over WS/WSS)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_set_header Host $host;
        proxy_read_timeout 300;
    }

    # ===== OME: WHIP ingest =====
    # OBS WHIP URL: https://lunarmelee.com/whip/live/test?direction=whip
    location /whip/ {
        proxy_pass http://127.0.0.1:3333/whip/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;

        # WHIP likes unbuffered request body
        proxy_request_buffering off;
    }

    # (Optional) If you know OME uses a dedicated /ws/ path, you can keep this.
    # In most setups /app/... with Upgrade headers is enough, so this is not required:
    #
    # location /ws/ {
    #     proxy_pass http://127.0.0.1:3333/ws/;
    #     proxy_http_version 1.1;
    #     proxy_set_header Upgrade $http_upgrade;
    #     proxy_set_header Connection "upgrade";
    #     proxy_set_header Host $host;
    #     proxy_read_timeout 300;
    # }

    # ===== Next.js app (everything else) =====
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_cache_bypass $http_upgrade;
    }
}

# HTTP â†’ HTTPS redirect
server {
    if ($host = www.lunarmelee.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = lunarmelee.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name lunarmelee.com www.lunarmelee.com;
    listen 80;
    return 404; # managed by Certbot
}

